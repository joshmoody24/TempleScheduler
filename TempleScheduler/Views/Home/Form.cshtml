@{

    ViewData["Title"] = "Sign UP Form";
}

@model TimeSlot

<h2>Application Form</h2>

<form method="post" asp-action="Form">

    <div class="form-group">
        <label asp-for="Date">Date:</label>
        <input asp-for="Date" class="form-control" readonly />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Time">Time:</label>
        <input asp-for="Time" class="form-control" readonly />
    </div>


    <div class="form-group">
        <label asp-for="Group.GroupName">Group Name:</label>
        <input asp-for="Group.GroupName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Group.GroupSize">Group Size:</label>
        <input type="number" asp-for="Group.GroupSize" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Group.Email">Email:</label>
        <input asp-for="Group.Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Group.Phone">Phone(xxx-xxx-xxxx):</label>
        <input asp-for="Group.Phone" class="form-control" />
    </div>

    <br />

    <button class="btn btn-primary">Submit</button>
    <div asp-validation-summary="All"></div>

    <input type="hidden" asp-for="TimeSlotId" />

</form>