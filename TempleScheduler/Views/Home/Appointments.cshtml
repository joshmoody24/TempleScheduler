@{
    ViewData["Title"] = "View Appointments";
}

@model List<Group>

<h1>View Appointment</h1>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Name of Group</th>
            <th>Size of Group</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Time</th>
        </tr>
    </thead>

    <tbody>

        @if (Model?.Count() != 0)
        {
            @foreach (var b in Model)
            {
                <tr>b.Date</tr>
                <tr>b.GroupName</tr>
                <tr>b.GroupSize</tr>
                <tr>b.Email</tr>
                <tr>b.Phone</tr>

            }
        }
    </tbody>

</table>

